<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.sysu.yizhu">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    
    <application
        android:allowBackup="true"
        android:icon="@drawable/icon"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        
        <activity android:name=".Activity.LaunchActivity"
            android:theme="@style/AppStartLoadTranslucent">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".Activity.SignInActivity"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar">
        </activity>

        <activity android:name=".Activity.SignUpActivity">
        </activity>

        <activity android:name=".Activity.ForgotPwdActivity">
        </activity>

        <activity android:name=".Activity.MainActivity">
        </activity>

        <activity android:name=".Activity.AddQuestionActivity">
        </activity>

        <activity android:name=".Activity.QuestionDetailActivity">
        </activity>

        <activity android:name=".Activity.AddAnswerActivity">
        </activity>

    </application>

</manifest>
